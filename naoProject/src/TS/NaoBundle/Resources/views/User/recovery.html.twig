{% extends "@TSNao/sections/base.html.twig" %}

	{% block title %}Mot de passe oublié{% endblock %}

	{% block content %}

	{% for message in app.flashes('success') %}

            <div>
                {{ message }}
            </div>

        {% endfor %}

        {% for message in app.flashes('error') %}

            <div>
                {{ message }}
            </div>

        {% endfor %}

		<form action="{{ path('ts_nao_recovery') }}" method="post">
			<label for="email">Adresse e-mail</label>
			<input type="email" id="email" name="email" autocomplete="off" value="mbenguia.husseini@live.fr" required />

			<input type="hidden" id="ts_naobundle_user__token" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
			<input type="submit" value="Réinitialiser" />
		</form>

	{% endblock %}
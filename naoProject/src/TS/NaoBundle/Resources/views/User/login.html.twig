{% extends "@TSNao/sections/base.html.twig" %}

	{% block title %}Page de connexion{% endblock %}

	{% block content %}

		<div class="transparent">

			{%   include 'TSNaoBundle:sections:message.html.twig' %}

			{% if error %}
			<div class="alert alert-danger alert-dismissable mb-5">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<div> {{ error.message }} </div>
			</div>
			{% endif %}
			
			<div class="form_layout">
				<div class="form_head">
					<p><i class="fa fa-power-off mr-3"></i>Connexion</p>
				</div>
				<form action="{{ path('ts_nao_login_check') }}" method="post">
					<div class="form-group">
						<label for="username"><i class="fa fa-user mr-3"></i>Identifiant:</label>
						<input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" />
					</div>
					<div class="form-group">
						<label for="password"><i class="fa fa-lock mr-3"></i>Mot de passe :</label>
						<input type="password" id="password" class="form-control" name="_password" />
					</div>
					<div class="form-group">
						<input type="checkbox" id="remember_me" name="_remember_me" />
			    		<label for="remember_me">Se souvenir de moi</label>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
					<input type="submit" class="btn btn-primary d-block mx-auto" value="Se connecter" />
					<p class="text-center mt-4">
						<a href="{{ path('ts_nao_recovery') }}"><u>Mot de passe oubli√© ?</u></a>
					</p>
				</form>
			</div>
			<p class="text-center mt-4">Vous n'avez pas de compte ? <a href="{{ path('ts_nao_registration') }}"><u>Inscrivez-vous ici.</u></a></p>
		</div>

	{% endblock %}
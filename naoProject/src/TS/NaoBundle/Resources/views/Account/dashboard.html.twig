{% extends "@TSNao/sections/base.html.twig" %}

{% block title %}Dashboard{% endblock %}

{% block content %}
	<p>
		<a href="{{ path('ts_nao_logout') }}">Se déconnecter</a>
	</p>

    {% if 'ROLE_BIRD_FANCIER' in app.user.roles %}
		<p>
			<a href="{{ path('ts_nao_request_upgrade') }}">Demander une amélioration du compte</a>
		</p>
    {% endif %}

    {% if 'ROLE_ADMIN' in app.user.roles %}
		<p>
			<a href="{{ path('ts_nao_upgrade_request_list') }}">Liste des demandes d'amélioration de compte</a>
		</p>
    {% endif %}

	<p>
		<a href="{{ path('ts_nao_delete_account') }}">Supprimer mon compte</a>
	</p>
{% endblock %}



{% block js %}
	<script src="{{ asset('bundles/tsnao/jquery/nao.js') }}"></script>
{% endblock %}